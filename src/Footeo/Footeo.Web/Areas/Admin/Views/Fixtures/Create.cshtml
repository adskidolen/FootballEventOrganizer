@model Footeo.Web.Areas.Admin.ViewModels.Fixtures.Input.FixtureCreateInputModel

@{
    ViewData["Title"] = "Create Fixtures";
    var leagues = this.ViewData["Leagues"] as IEnumerable<SelectListItem>;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="w-50 mx-auto">
    <form asp-area="Admin" asp-controller="Fixtures" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LeagueId" class="control-label">League</label>
            <select asp-for="LeagueId" asp-items="leagues" class="form-control">
                <option selected="selected" disabled="disabled">Choose League</option>
            </select>
            <span asp-validation-for="LeagueId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-area="" asp-controller="Leagues" asp-action="All">Back to Leagues</a>
</div>
