@model Footeo.Web.ViewModels.Fields.Input.FieldCreateInputModel

@{
    ViewData["Title"] = "Add Field";
}

<h2>@this.ViewData["Title"]</h2>
<hr />
<div class="w-50 mx-auto">
    <form asp-area="Admin" asp-controller="Fields" asp-action="Add" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Estadio Santiago Bernabeu" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" placeholder="Av. de Concha Espina, 1, 28036 Madrid" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="IsIndoors" /> @Html.DisplayNameFor(model => model.IsIndoors)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Town" class="control-label"></label>
            <input asp-for="Town" class="form-control" placeholder="Madrid" />
            <span asp-validation-for="Town" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Field" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

