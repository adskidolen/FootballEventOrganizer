@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="w-50 mx-auto">
    <h2 class="text-center">@this.ViewData["Title"]</h2>
    <hr />
    <form class="mx-auto half-width" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="d-flex justify-content-between">
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.Username"></label>
                </div>
                <input asp-for="Input.Username" class="form-control" placeholder="adskidolen">
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.Email"></label>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="adskidolen@@mail.bg">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.Password"></label>
                </div>
                <input asp-for="Input.Password" class="form-control" placeholder="Password...">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.ConfirmPassword"></label>
                </div>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password...">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2 bg-eventures" />
        <div class="d-flex justify-content-between">
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.FirstName"></label>
                </div>
                <input asp-for="Input.FirstName" class="form-control" placeholder="Alexander">
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.LastName"></label>
                </div>
                <input asp-for="Input.LastName" class="form-control" placeholder="Paunski">
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.Age"></label>
                </div>
                <input asp-for="Input.Age" class="form-control" placeholder="22">
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <div class="d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="Input.Town"></label>
                </div>
                <input asp-for="Input.Town" class="form-control" placeholder="Sofia">
                <span asp-validation-for="Input.Town" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="form-group w-50">
                <label class="font-weight-bold">Choose your role in the FootEO:</label>
                @{ var roles = new string[] { "Player", "Referee" }; }
                @foreach (var role in roles)
                {
                    <div class="d-flex justify-content-center">
                        <label class="radio-inline" asp-for="Input.Role"><input asp-for="Input.Role" type="radio" value="@role" />@role</label>
                    </div>
                }
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn">Register</button>
        </div>
    </form>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
