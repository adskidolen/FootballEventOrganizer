@page
@using Footeo.Common
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    var roles = new string[] { GlobalConstants.PlayerRoleName, GlobalConstants.RefereeRoleName };
}
@inject UserManager<FooteoUser> UserManger

<div class="container">
    <div id="signupbox" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">@this.ViewData["Title"]</div>
                    <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" asp-area="Identity" asp-page="/Account/Login">Sign In</a></div>
                </div>
                <div class="panel-body">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="signupform" class="form-horizontal" role="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Username" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.Username" class="form-control" placeholder="Username...">
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.Email" class="form-control" placeholder="example@email.com">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.Password" class="form-control" placeholder="Password...">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password...">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.FirstName" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name...">
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.LastName" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name...">
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label asp-for="Input.Age" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.Age" class="form-control" placeholder="Age...">
                                <span asp-validation-for="Input.Age" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Town" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Input.Town" class="form-control" placeholder="Town Name...">
                                <span asp-validation-for="Input.Town" class="text-danger"></span>
                            </div>
                        </div>

                        @if (UserManger.Users.Count() == GlobalConstants.UserCountCheck)
                        {
                            <div class="form-group">
                                <label class="col-md-3 control-label">You will be the main admin at FootEO!</label>
                                <div class="col-md-9">
                                    <label class="radio-inline" asp-for="Input.Role">
                                        <input asp-for="Input.Role" type="radio" checked="checked" value="@GlobalConstants.AdminRoleName" />@GlobalConstants.AdminRoleName
                                    </label>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label class="col-md-3 control-label">Choose your role in the FootEO:</label>
                                <div class="col-md-9">
                                    @foreach (var role in roles)
                                    {
                                        <label class="radio-inline" asp-for="Input.Role"><input asp-for="Input.Role" type="radio" value="@role" />@role</label>
                                    }
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                            </div>
                        }

                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Sign Up</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
