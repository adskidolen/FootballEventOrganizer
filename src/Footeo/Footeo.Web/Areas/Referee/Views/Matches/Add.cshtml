@using Footeo.Web.Areas.Referee.ViewModels.Players.Output
@using Footeo.Web.Areas.Referee.ViewModels.Players.Input

@model Footeo.Web.Areas.Referee.ViewModels.Matches.Input.AddMatchInfoInputModel

@{
    ViewData["Title"] = "Add Match Info";

    var homeTeamPlayers = this.ViewData["HomeTeamPlayers"] as IEnumerable<PlayerViewModel>;
    var awayTeamPlayers = this.ViewData["AwayTeamPlayers"] as IEnumerable<PlayerViewModel>;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="w-50 mx-auto">
    <form asp-area="Referee" asp-controller="Matches" asp-action="Add" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="HomeTeamGoals" class="control-label">Home Team Goals</label>
            <input asp-for="HomeTeamGoals" class="form-control" />
            <span asp-validation-for="HomeTeamGoals" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AwayTeamGoals" class="control-label">Away Team Goals</label>
            <input asp-for="AwayTeamGoals" class="form-control" />
            <span asp-validation-for="AwayTeamGoals" class="text-danger"></span>
        </div>

        <div class="container">
            <h5 class="text-center">Home Team Players</h5>
            @foreach (var player in homeTeamPlayers)
            {
                <div class="form-row">
                    <div class="col-md-4 mt-2">
                        <label class="control-label">@player.Name</label>
                    </div>
                    <div class="col-md-4 mt-2">
                        <input class="form-control" placeholder="Goals scored..." />
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mt-2">
                        <input class="form-control" placeholder="Assists made..." />
                        <span class="text-danger"></span>
                    </div>
                </div>
            }
        </div>

        <hr />

        <div class="container">
            <h5 class="text-center">Away Team Players</h5>
            @foreach (var player in awayTeamPlayers)
            {
                <div class="form-row">
                    <div class="col-md-4 mt-2">
                        <label class="control-label">@player.Name</label>
                    </div>
                    @*@for (int i = 0; i < Model.Stats.Count(); i++)
                        {*@
                    <div class="col-md-4 mt-2">
                        <input class="form-control" placeholder="Goals scored..." />
                        <span class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mt-2">
                        <input name="Assists" class="form-control" placeholder="Assists made..." />
                        <span class="text-danger"></span>
                    </div>
                    @*}*@
                </div>
            }
        </div>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

