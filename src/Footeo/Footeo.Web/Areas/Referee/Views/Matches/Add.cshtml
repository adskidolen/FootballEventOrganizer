@model Footeo.Web.Areas.Referee.ViewModels.Matches.Input.AddMatchInfoInputModel

@{
    ViewData["Title"] = "Add Match Info";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="w-50 mx-auto">
    <form asp-area="Referee" asp-controller="Matches" asp-action="Add" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="HomeTeamGoals" class="control-label">Home Team Goals</label>
            <input asp-for="HomeTeamGoals" class="form-control" />
            <span asp-validation-for="HomeTeamGoals" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AwayTeamGoals" class="control-label">Away Team Goals</label>
            <input asp-for="AwayTeamGoals" class="form-control" />
            <span asp-validation-for="AwayTeamGoals" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

