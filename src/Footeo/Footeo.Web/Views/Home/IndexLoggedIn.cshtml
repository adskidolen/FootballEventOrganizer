
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">Hello, @this.User.Identity.Name!</h1>
<h1 class="text-center">Welcome to your Football Event Organizer!</h1>
<hr />

<div class="container">
    @if (User.IsInRole("Player"))
    {
        <h1 class="text-center">Join Team</h1>
    }

    @if (User.IsInRole("Referee"))
    {
        <h1 class="text-center">Join Match</h1>
    }

    @if (User.IsInRole("Admin"))
    {
        <h1 class="text-center">Join Team</h1>
        <h1 class="text-center">Join Match</h1>
    }
</div>