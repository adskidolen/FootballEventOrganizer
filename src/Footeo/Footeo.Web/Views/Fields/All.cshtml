@model Footeo.Web.ViewModels.Fields.View.AllFieldsViewModel

@{
    ViewData["Title"] = "All Fields";
}

<h2 class="text-center">All Fields</h2>

<div class="mx-auto w-50">
    <table class="table-hover table table-striped">
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Indoor or Outdoor</th>
            <th>Town</th>
        </tr>
        @foreach (var field in Model.Fields)
        {
            <tr>
                <td>@field.Name</td>
                <td>@field.Address</td>
                @if (field.IsIndoors)
                {
                    <td>Indoor</td>
                }
                else
                {
                    <td>Outdoor</td>
                }
                <td>@field.TownName</td>
            </tr>
        }
    </table>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>