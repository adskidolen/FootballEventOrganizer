@model Footeo.Web.ViewModels.Trophies.Output.AllTrophiesViewModel

@{
    ViewData["Title"] = "Trophies for Team";
    int index = 1;
}

@if (!Model.Trophies.Any())
{
    <div class="container text-center">
        <h2 class="text-center" style="color:#00a78e">@this.ViewData["Title"]</h2>
        <hr class="hr-2" />
        <div class="row" style="color:#8d9293; font-size:40px">
            <div style="color:#8d9293" class="col-lg-12">No trophies yet</div>
        </div>
    </div>
}
else
{
    <div class="container">
        <h2 class="text-center" style="color:#00a78e">@this.ViewData["Title"]</h2>
        <hr class="hr-2" />
        <div class="row" style="color:#8d9293; font-size:30px">
            @foreach (var trophy in Model.Trophies)
            {
                <div style="color:#00a78e" class="col-lg-2">@index.</div>
                <div class="col-lg-10">@trophy.ShowName</div>
            }
        </div>
    </div>
}