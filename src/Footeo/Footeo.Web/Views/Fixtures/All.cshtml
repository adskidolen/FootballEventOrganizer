@model Footeo.Web.ViewModels.Fixtures.Output.AllFixturesViewModel

@{
    ViewData["Title"] = "Fixtures";
}

@if (!Model.Fixtures.Any())
{
    <div class="container">
        <h2 class="text-center" style="color:#00a78e">No fixtures for this league yet</h2>
    </div>
}
else
{
    <div class="container">
        <h2 class="text-center" style="color:#00a78e">@this.ViewData["Title"]</h2>
        <hr class="hr-2" />
        <!-- match -->
        <div class="match">
            <!-- container -->
            <div class="container">
                <div class="match-table">
                    <div class="table-rows text-center">
                        @foreach (var fixture in Model.Fixtures)
                        {
                            <div class="table-hedding">
                                <h3>@fixture.ShowInfo  <a style="background-color:#00a78e" class="btn btn-primary" asp-controller="Fixtures" asp-action="Details" asp-route-id="@fixture.Id">Details</a></h3>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- //container -->
        </div>
        <!-- //match -->
    </div>
}